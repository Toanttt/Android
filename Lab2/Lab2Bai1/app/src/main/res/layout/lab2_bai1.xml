<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22521490-NguyenDucToan-Bai1"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TextView để hiển thị phần tử được chọn -->
        <TextView
            android:id="@+id/tv_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selection will appear here"
            android:background="#0307fc"
            android:textSize="18sp" />

    </LinearLayout>
    <!-- ListView để hiển thị danh sách -->
    <ListView
        android:id="@+id/lv_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="#189bcc"/>
</LinearLayout>
