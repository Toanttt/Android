<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Header thông tin cá nhân -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="22521490 - NguyenDucToan - Bai3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Thanh tiêu đề -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý nhân viên"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/green"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Label Mã NV -->
    <TextView
        android:id="@+id/tv_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã NV:"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Input Mã NV -->
    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập mã NV"
        app:layout_constraintStart_toEndOf="@id/tv_id_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Label Tên NV -->
    <TextView
        android:id="@+id/tv_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên NV:"
        app:layout_constraintTop_toBottomOf="@id/tv_id_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Input Tên NV -->
    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập tên NV"
        app:layout_constraintStart_toEndOf="@id/tv_name_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_id"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Label Loại NV -->
    <TextView
        android:id="@+id/tv_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại NV:"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- RadioGroup Loại NV -->
    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/et_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rd_fulltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chính thức"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rd_parttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời vụ" />
    </RadioGroup>

    <!-- Button Nhập NV -->
    <Button
        android:id="@+id/btn_add"
        android:layout_width="186dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:text="Nhập NV"
        app:layout_constraintStart_toStartOf="@id/rg_type"
        app:layout_constraintTop_toBottomOf="@id/rg_type" />

    <!-- thanh ngang màu -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add"
        android:text="xinchao"
        android:background="@color/green"/>

    <!-- ListView Danh sách nhân viên -->
    <ListView
        android:id="@+id/lv_employees"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
